<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
          <div class="login" id="contentArea">
              <h1 class="display-4"><%= title %>Contacts</h1>
           
    
           
              <form method="POST" id="registerForm" novalidate>
                
                <div class="form-group mt-4">
                  <div class="row">
                  
                    <div class="col-md-12">
                      <input type="text" class="form-control"  name="contactname"  required
                      value="<%= contact.Name %>" placeholder="Contact Name">
                    </div>
                  </div>
                </div>
  
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="text" class="form-control"  name="phone"  required
                      value="" placeholder="Contact Number">
                    </div>
                  </div>
                </div>
  
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="text" class="form-control" name="email"  required
                      value="" placeholder="Contact Email">
                    </div>
                  </div>
                </div>
                                                    
                <div class="text-end mt-2">
                  <button id="submitButton" type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus"></i> Add</button>

                  <!--cancel button-->
                    <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i> Cancel</a>
                </div>
              </form>
             
          </div>
    </div>
  </div>